<Page x:Class="Hot_IP_Tato.Game_Config"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hot_IP_Tato"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="450"
      Title="Game_Config">

    <Grid>
        <StackPanel Width="400" HorizontalAlignment="Center" Margin="10">
            <TextBlock>Game Config Page!</TextBlock>
            <Label>Time Limit</Label>
            <Slider/>
            
            <Label>Optional Parameters</Label>
            <Label>Number of Potatoes</Label>
            <Slider/>
            
            <Label>Mutators</Label>
            <StackPanel>
                <RadioButton Content="RadioButton"/>
                <RadioButton Content="RadioButton"/>
                <RadioButton Content="RadioButton"/>
            </StackPanel>
        
            <StackPanel Orientation="Horizontal" Width="400">
                <Button>Cancel</Button>
                <Button>Start Game</Button>
            </StackPanel>
            

        </StackPanel>
    </Grid>
</Page>
