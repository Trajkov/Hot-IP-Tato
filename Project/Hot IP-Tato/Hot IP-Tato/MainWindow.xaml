<Window x:Class="Hot_IP_Tato.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hot_IP_Tato"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  <StackPanel  VerticalAlignment="Top" Background="lightgray">
    <StackPanel.Resources>
      <Style TargetType ="Button">
        <Setter Property="Width" Value="80"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Margin" Value="5"/>
      </Style>
    </StackPanel.Resources>
    <Image Width="100" Height="100" Margin="5"></Image>
    <TextBlock FontWeight="Bold" FontSize="30" HorizontalAlignment="Center" Margin="5">Hot IP-Tato</TextBlock>
    <Button>Start</Button>
    <Button>Options</Button>
    <Button>Quit</Button>
  </StackPanel>
</Window>
