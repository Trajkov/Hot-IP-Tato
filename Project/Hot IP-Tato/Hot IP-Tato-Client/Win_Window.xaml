<Window x:Class="Hot_IP_Tato_Client.WinWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hot_IP_Tato_Client"
        mc:Ignorable="d"
        Title="YOU WIN!" Width="450" Height="450"
        Background="#432109">
    <StackPanel Margin="15" Background="#DCC064">
        <TextBlock HorizontalAlignment="Center">You have survived the game and are the winner</TextBlock>
        <Image Name="imgPotato" Width="200" Height="200" Source="img/potatoes.jpg"></Image>
        <Button Name="btnWin" Click="BtnPassPotato_Click" Width="300" Height="100" VerticalAlignment="Bottom" FontSize="30" FontWeight="Black">You Win!</Button>
    </StackPanel>
</Window>
