      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hot_IP_Tato_Client"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="450"
      Title="Main Menu">

    <Grid>
        <StackPanel Grid.Column="1" Background="#65350c">
            <TextBlock HorizontalAlignment="Center" FontSize="24" Foreground="White">Hot IP_Tato Client</TextBlock>
            <Image Source="potatoes.jpg" Width="200" Height="200"></Image>
            <Button Click="btn_Join_Click">Join</Button>
            <Button Click="btn_Options_Click">Options</Button>
            <Button Click="btn_Quit_Click">Quit</Button>
        </StackPanel>
    </Grid>
</Page>
