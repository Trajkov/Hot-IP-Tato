<Window x:Class="Hot_IP_Tato_Client.Game_Popup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hot_IP_Tato_Client"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Hot IP-Tato" Width="450" Height="450">
    <StackPanel >
        <TextBlock HorizontalAlignment="Center">Player has sent you a Hot IP-Tato</TextBlock>
        <Image Width="200" Height="200" Source="potatoes.jpg"></Image>
        <Button Width="250" Height="100" VerticalAlignment="Bottom" FontSize="30" FontWeight="Black">Pass the Potato!</Button>
    </StackPanel>
</Window>
